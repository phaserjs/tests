{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "esnext",
        "module": "es2015",
        "lib": [ "dom", "es5", "es6", "es7", "esnext" ],
        "emitDeclarationOnly": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "removeComments":true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        "suppressImplicitAnyIndexErrors": true,
    },
    "exclude": [
        "node_modules",
        "../phaser-genesis/src/src/stats/",
        "../phaser-genesis/src/src/motion/tween/index.ts",
        "../phaser-genesis/src/src/motion/tween/Tween.ts",
        "../phaser-genesis/src/src/motion/tween/TweenPlugin.ts",
        "../phaser-genesis/src/src/motion/tween/ITweenPlugin.ts"
    ]
}
